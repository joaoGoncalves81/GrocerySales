@using Microsoft.AspNetCore.Identity

@if (Context.User.Identity.IsAuthenticated)
{
    <li class="nav-item list-inline-item">
        <a class="nav-link esh-identity-item px-0 px-sm-3"
           asp-page="/Order/Index">
            <i class="fas fa-shopping-bag fa-lg"></i>
            <span class="d-none d-sm-inline">Faturas</span>
        </a>
    </li>
    <li class="nav-item list-inline-item">
        <a class="nav-link esh-identity-item px-0 px-sm-3"
           asp-page="/Account/Manage/Index">
            <i class="fas fa-user fa-lg"></i>
            <span class="d-none d-sm-inline">Minha Conta</span>
        </a>
    </li>
    <li class="nav-item list-inline-item">       
        <form id="logoutForm" class="form-inline" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/Index", new { area = "" })" method="post">
            <a href="javascript:document.getElementById('logoutForm').submit()" class="nav-link esh-identity-item px-0 px-sm-3">
                <i class="fas fa-sign-out-alt fa-lg"></i>
                <span class="d-none d-sm-inline">Sair</span>
            </a>
        </form>
    </li>
    <li class="list-inline-item">
        @await Component.InvokeAsync("Basket")
    </li>
}
else
{
    <li class="nav-item list-inline-item">
        <a asp-page="/Account/Login" class="nav-link px-0 px-sm-3">
            <i class="fas fa-user fa-lg"></i>
            <span class="d-none d-sm-inline">Entrar</span>
        </a>
    </li>
    <li class="list-inline-item">
        @await Component.InvokeAsync("Basket")
    </li>
}
